<%= form_with model: @forecast do |f| %>
  <div class="mb-3">
    <%= f.label :city %>
    <br>
    <%= f.select :city, city_array, selected: current_user.prefered_city, class: 'form-select' %>
  </div>

  <div class="mb-3">
    <%= f.label :date %>
    <br>
    <% 5.times do |i| %>
      <%= f.radio_button :date, Date.today + i %> <%= (Date.today + i).strftime("%A") %>
    <% end %>
  </div>

  <div class="d-grid">
    <%= f.submit "Search", class: "btn btn-success" %>
  </div>
<% end %>
